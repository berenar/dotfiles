{
  "$schema": "https://opencode.ai/config.json",
  "model": "github-copilot/gpt-5-mini",
  "theme": "github",
  "autoupdate": true,
  "username": "Bernat",
  "instructions": [
    "./instructions/*.md",
    "CLAUDE.md",
    ".cursor/rules/*.md",
    "GEMINI.md",
    "WINDSURF.md",
  ],
  "tui": {
    "scroll_speed": 5,
  },
  "permission": {
    "bash": { "make *": "allow" },
  },
  "mcp": {
    "github": {
      "enabled": true,
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-github"],
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "{env:GITHUB_PERSONAL_ACCESS_TOKEN}",
      },
    },
    "linear": {
      "enabled": true,
      "type": "local",
      "command": ["npx", "-y", "mcp-remote", "https://mcp.linear.app/sse"],
    },
    "context7": {
      "enabled": true,
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "{env:CONTEXT7_API_KEY}",
      ],
    },
    "sentry": {
      "enabled": false,
      "type": "remote",
      "url": "https://mcp.sentry.dev/mcp",
    },
    "chrome-devtools": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "chrome-devtools-mcp@latest"],
    },
    "mcp-mermaid": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "mcp-mermaid"],
    },
  },
}
