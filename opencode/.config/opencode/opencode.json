{
  "$schema": "https://opencode.ai/config.json",
  "model": "github-copilot/claude-sonnet-4.5",
  "theme": "github",
  "autoupdate": true,
  "username": "Bernat",
  "instructions": [
    "./instructions/*.md",
    "CLAUDE.md",
    ".cursor/rules/*.md",
    "GEMINI.md",
    "WINDSURF.md"
  ],
  "tui": {
    "scroll_speed": 5
  },
  "permission": {
    "edit": "ask",
    "webfetch": "allow",
    "bash": {
      "find *": "allow",
      "cat *": "allow",
      "ls *": "allow",
      "cd *": "allow",
      "pwd *": "allow",
      "grep *": "allow",
      "curl *": "allow",
      "rm": "ask",
      "mv": "ask",
      "cp": "ask",
      "git commit": "ask",
      "git status": "allow",
      "git pull": "allow",
      "git push": "ask",
      "git diff": "allow",
      "git checkout": "allow",
      "gh pr diff": "allow",
      "gh pr list": "allow",
      "gh pr status": "allow",
      "gh pr view": "allow",
      "make": "allow",
      "pnpm": "allow"
    }
  },
  "mcp": {
    "github": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-github"],
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "{env:GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    },
    "linear": {
      "type": "local",
      "command": ["npx", "-y", "mcp-remote", "https://mcp.linear.app/sse"]
    },
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "{env:CONTEXT7_API_KEY}"
      ],
      "enabled": true
    },
    "sentry": {
      "enabled": false,
      "type": "remote",
      "url": "https://mcp.sentry.dev/mcp"
    },
    "chrome-devtools": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "chrome-devtools-mcp@latest"]
    },
    "mcp-mermaid": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "mcp-mermaid"]
    }
  }
}
