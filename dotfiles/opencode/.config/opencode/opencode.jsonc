{
  "$schema": "https://opencode.ai/config.json",
  "model": "github-copilot/gpt-4o", // default model when agent is not build nor plan
  "theme": "github",
  "autoupdate": true,
  "username": "Bernat",
  "instructions": [
    // these are relative to where opencode is run from, therefore the global ones need full paths
    "/Users/berenar/dotfiles/dotfiles/opencode/.config/opencode/instructions/responding.md",
    "/Users/berenar/dotfiles/dotfiles/opencode/.config/opencode/instructions/plan-mode.md",
    "/Users/berenar/dotfiles/dotfiles/opencode/.config/opencode/instructions/build-mode.md",
    "/Users/berenar/dotfiles/dotfiles/opencode/.config/opencode/instructions/coding-preferences.md",
    "/Users/berenar/dotfiles/dotfiles/opencode/.config/opencode/instructions/testing.md",
    "/Users/berenar/dotfiles/dotfiles/opencode/.config/opencode/instructions/git-commit-workflow.md",
    "/Users/berenar/dotfiles/dotfiles/opencode/.config/opencode/instructions/identity.md",
    "/Users/berenar/dotfiles/dotfiles/opencode/.config/opencode/instructions/external-links.md",
    "/Users/berenar/dotfiles/dotfiles/opencode/.config/opencode/instructions/tooling-preferences.md",
    "CLAUDE.md",
    ".cursor/rules/*.md",
    "GEMINI.md",
    "WINDSURF.md",
  ],
  "plugin": ["cc-safety-net"],
  "tui": {
    "scroll_acceleration": {
      "enabled": true,
    },
  },
  "permission": {
    "bash": {
      "make *": "allow",
      "echo *": "allow",
      "grep *": "allow",
      "cat *": "allow",
    },
  },
  "keybinds": {
    "model_cycle_favorite": "ctrl+f",
  },
  "default_agent": "plan",
  "agent": {
    "plan": { "model": "openai/gpt-5.2", "color": "#39C5CF" },
    "build": { "model": "openai/gpt-5.2-codex", "color": "#A855F7" },
    "general": {
      "mode": "subagent",
      "model": "github-copilot/gpt-4o",
    },
    "explore": {
      "mode": "subagent",
      "model": "github-copilot/gpt-4o",
    },
  },
  "mcp": {
    "github": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-github"],
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "{env:GITHUB_PERSONAL_ACCESS_TOKEN}",
      },
    },
    "linear": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "mcp-remote", "https://mcp.linear.app/sse"],
    },
    "playwright": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"],
    },
    "context7": {
      "enabled": false,
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "{env:CONTEXT7_API_KEY}",
      ],
    },
    "sentry": {
      "enabled": false,
      "type": "remote",
      "url": "https://mcp.sentry.dev/mcp",
    },
    "notion": {
      "enabled": false,
      "type": "remote",
      "url": "https://mcp.notion.com/mcp",
    },
    "chrome-devtools": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "chrome-devtools-mcp@latest"],
    },
    "mcp-mermaid": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "mcp-mermaid"],
    },
  },
}
